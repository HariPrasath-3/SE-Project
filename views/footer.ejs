<script>        
    <% if(flash.success && flash.success.length > 0){ %>
        var notyf = new Notyf({
            type: 'success',
            position: {
                x: 'right',
                y: 'top',
            },
            background: 'green',
            duration: 1500 
        });
        notyf.success('<%= flash.success %>');
    <% }else if(flash.error && flash.error.length > 0){ %> 
        var notyf = new Notyf({
            type: 'error',
            position: {
                x: 'right',
                y: 'top',
            },
            background: 'orange',
            duration: 1500 
        });
        notyf.error('<%= flash.error %>');
    <% } %>
</script>